#CROSS_COMPILE = arm-none-linux-gnueabi-
CROSS_COMPILE = 
AS			= $(CROSS_COMPILE)as
LD			= $(CROSS_COMPILE)ld
CC			= $(CROSS_COMPILE)gcc
CXX			= $(CROSS_COMPILE)g++
AR			= $(CROSS_COMPILE)ar
NM			= $(CROSS_COMPILE)nm
STRIP		= $(CROSS_COMPILE)strip
OBJCOPY		= $(CROSS_COMPILE)objcopy
OBJDUMP		= $(CROSS_COMPILE)objdump

export AS LD CC CXX AR NM STRIP OBJCOPY OBJDUMP

#CFLAGS := -Wall -O2 -g -Werror
CPPFLAGS := -Wall -O2 -g -Werror

#CFLAGS += -I $(shell pwd)/include
CPPFLAGS += -I$(shell pwd)/include #-I/mFile/arm/non-local/include

#LDFLAGS := -L/mFile/arm/non-local/lib
LDFLAGS += -lpthread -lx264 -lrtmp -lssl -ldl -lz -lcrypto -lrt

export CFLAGS CPPFLAGS LDFLAGS

TOPDIR := $(shell pwd)

export TOPDIR

TARGET := app

obj-y += Main.o

obj-y += log/
obj-y += lib/
obj-y += print/

all:
	make -C ./ -f $(TOPDIR)/Makefile.build
	$(CXX) -o $(TARGET) built-in.o $(LDFLAGS)
	
clean:
	rm -f $(shell find -name "*.o")
	rm -f $(TARGET)

distclean:
	rm -f $(shell find -name "*.o")
	rm -f $(shell find -name "*.d")
	rm -f $(TARGET)
